<resources>

    <!-- Base application theme. -->
    <style name="Theme.PaperPhone" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.PaperPhone.Immersive" parent="Theme.PaperPhone">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.PaperPhone.Immersive">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/btn_text_color_indicator</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/button_default_selector</item>
    </style>

    <style name="Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16.4sp</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/varela_regular</item>
    </style>

    <style name="ListItem">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16.2sp</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/varela_regular</item>
    </style>

    <style name="Subtitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14.8sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/worksans_regular</item>
    </style>

    <style name="ListSubItem">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/worksans_regular</item>
    </style>

</resources>
